{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="alert alert-danger">
                <ul class="list-unstyled"> 
                    {% for error in errors %}
                        <li>{{ error.message }}</li>
                        {% endfor %}
                </ul> 
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}